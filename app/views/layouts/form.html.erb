<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<link rel="apple-touch-icon" sizes="76x76" href="assets/img/favicon.ico">

	<title>Create CV</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

	<link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png" />
	<link rel="icon" type="image/png" href="assets/img/favicon.png" />

	<!--     Fonts and icons     -->
	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />

	<!-- CSS Files -->
	<%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>

<%= csrf_meta_tags %>
	<%= stylesheet_link_tag    'cv_form/form', media: 'all', 'data-turbolinks-track': 'reload' %>
	

	</head>

	<body>
	    <% unless current_user %>
      <%= render 'layouts/register_warning' %>
    <% end %>
	  <%= render 'layouts/popupforms' %>
	<%= render 'layouts/nav' %>


		<div class="image-container set-full-height" >
	    <!--   Material Resume Branding   -->
	    <a href="http://creative-tim.com">
	         <div class="logo-container">
	            <div class="logo">
	                <%= image_tag 'cv/new_logo.png' %>
	            </div>
	            <div class="brand">
	                Material Resume
	            </div>
	        </div>
	    </a>
	    <%= yield %>
	    

	    <div class="footer">
	        <div class="container text-center">
	             Made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Material Resume</a>. Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard">here.</a>
	        </div>
	    </div>
	</div>
	</body>
	<%= javascript_include_tag 'cv_form/form', 'data-turbolinks-track': 'reload' %>
	<% javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>



	</html>